<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/warningHeader1"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffaaaaaa"
    android:baselineAligned="true"
    android:padding="5dip" >  <!-- @drawable/headerback2  -->

        <Button
            android:id="@+id/warningButton1"
            android:background="@drawable/alerticon" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="" /> <!-- @string/back -->

        <TextView
            android:id="@+id/hintTextView1"
            android:textColor="#ff000000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="5dip"
            android:text="@string/warning_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
             />
        
          <Button
              android:id="@+id/warningButton2"
              android:background="@drawable/closeicon"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:text="" /> <!-- @string/label -->

</LinearLayout>